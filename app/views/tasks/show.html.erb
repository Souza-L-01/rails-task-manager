<div class="container">
<div class="d-flex justify-content-between">
  <div class="row align-items-center ">
    <h1><%= @task.title.capitalize %></h1>
    <h5><%= link_to "Edit this task", edit_path %></h5>
  </div>
</div>
<p class="details"><%= @task.details.capitalize %></p>
<% if @task.completed == 1 %>
  <p><i class="far fa-check-square"></i> This task is completed.</p>
<% else %>
  <p><i class="far fa-square"></i> This task is not completed.</p>
<% end %>

<p><%= link_to "Delete", task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
     <i class="far fa-trash-alt"></i>
</p>
<h4><%= link_to "Back", tasks_path %></h4>
</div>

